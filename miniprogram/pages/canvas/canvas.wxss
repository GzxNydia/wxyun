page{
  width: 100%;
  padding: 25rpx;
  box-sizing: border-box;
  background: black;
}
.canvas{
	padding-bottom: 10rpx;
}
.myCan{
  width: 100%;
  height: 590rpx;
  background: #ddd;
  position: relative;
}
.backOriBtn{
  position: absolute;
  top:20rpx;
  right: 20rpx;
  font-size: 14px;
  background: #323331;
  color: #fff;
  padding: 8rpx 15rpx;
  border: 1rpx solid #e4e6e3;
  border-radius: 10rpx;
}
.tips{
	margin-top:20rpx;
	color: white;
	text-align: center;
	font-size: 30rpx;
}
.hr{
	font-size: 34rpx;
	text-align: center;
	height: 2rpx;
	width: 100%;
	background: white;
	color: white;
	margin: 51rpx 0;
	position: relative;
}
.hr text{
	text-align: center;
	width: 370rpx;
	display: block;
	background: #000000;
	position: absolute;
	left: 50%;
	top: 50%;
	transform: translate(-50%,-50%);
	letter-spacing: 2rpx;
}
.labels{
	display: flex;
	align-items: center;
	justify-content: space-between;
	flex-flow: wrap;
}
.labelItem{
	margin: 13rpx 20rpx;
	display: block;
	background: #fff;
	padding:10rpx 20rpx;
	font-size: 30rpx;
}
.addIcon{
	color: white;
	text-align: center;
	display: inline-block;
	width: 26rpx;
	height: 26rpx;
	background: #000000;
	border-radius: 50%;
	line-height: 1;
	/* line-height: 30rpx; */
  font-size: 16px;
  vertical-align: center;
}

 /*选中的Label */
.activeLabel{
	/* border: 1rpx solid black; */
	background: #ccc;
	color: #4D4D4D;
}
.labelIpt{
	font-size:34rpx;
	background: white;
	height: 35px;
	padding: 0 20rpx;
	box-sizing: border-box;
}
 /*选图片按钮 */
.selPhotoBtn{
	border-radius: 0;
	margin-top: 25rpx;
	height: 84rpx;
	line-height: 84rpx;
	font-size: 36rpx;
}
.reIcon{
	width: 35rpx;
	height: 35rpx;
	margin-right: 8rpx;
}
.confirmBtn{
	margin-top: 20rpx;
}
page {
  width: 100%;
  height: 100%;
}

.rule {
  width: 100%;
  height: 100%;
  position: relative;
}

.ruleBg {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
}

.content {
  width: 90%;
  height: 92%;
  border: 6rpx solid white;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: white;
  padding: 40rpx 70rpx;
  box-sizing: border-box;
  overflow: auto;
}

.ruleTxt {
  width: 100%;
}

.skipBtn {
  display: flex;
  justify-content: center;
  align-items: center;
  background: white;
  width: 300rpx;
  margin: 0 auto;
  margin-top: 20rpx;
  padding: 10rpx 20rpx;
}

.btnTxt {
  color: black;
  font-size: 34rpx;
  padding-right: 10rpx;
  border-right: 1rpx solid #dadada;
  margin-right: 10rpx;
}

.rightIcon {
  width: 30rpx;
  height: 30rpx;
}

/*底部按钮 */

.button {
  background: #fff;
  border: none;
  display: flex;
  border-radius: 0;
  justify-content: center;
  align-items: center;
  padding: 6rpx 20rpx;
  width: 390rpx;
  margin: 0 auto;
  margin-top: 20rpx;
  line-height: 1.5;
}
.button::after{
	border: none;
}
.cameraIcon {
  width: 40rpx;
  margin-right: 15rpx;
  animation: pulse 1.5s 0.4s both infinite ease-in-out;
}

@keyframes pulse {
  from, 50%, to {
    transform: scale(1.3);
  }

  25%, 75% {
    transform: scale(1);
  }
}

.rightIcon {
  width: 35rpx;
}

.buttonTxt {
  color: black;
  font-size: 34rpx;
  padding-right: 10rpx;
  border-right: 1rpx solid #dadada;
  margin-right: 10rpx;
}

.title{
    position: fixed;
    top:0;
    left: 0;
    width: 100%;
    /* 11111111 */
    height: 140rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #000000;
    overflow: hidden;
}
.titleImg{
   height: 80%;
   width: 55%; 
}
.selItems{
    position: fixed;
    top:140rpx;
    left: 0;
    width: 100%;
    /* 1111111111 */
    height: 80rpx;
    display: flex;
    align-items: center;
    background: #f1f0f0;
    overflow: hidden;
}
.selItem{
    display: flex;
    width: 50%;
    height: 110%;
    align-items: center;
    justify-content: center;
    color: #000000;
}
.activeItem{
    background: #dadada;
}
.triangleIcon{
    width: 30rpx;
    height: 30rpx;
    margin-right: 15rpx;
}
.content{
    /* 1111111 */
    padding: 220rpx 40rpx 30rpx 40rpx;
    box-sizing: border-box;
}
.contentItem{
    margin-top:40rpx;
}
.userImg{
    background: #ddd;
    width: 100%;
    display: block;
}
.itemText{
    background: rgba(240,240,240,.7);
    padding: 10rpx;
    box-sizing: border-box;
}
.userInfo{
    font-size: 32rpx;
    margin-top: 20rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.thumUp{
    display: flex;
    justify-content: center;
    align-items: center;
}
.thumUp image{
    width: 30rpx;
    height: 30rpx;
    margin-right: 10rpx;
}
.markers{
    margin-top:10rpx;
}
.marker{
    font-size: 30rpx;
    color: #7d7d7d;
    margin-right: 10rpx;
    line-height: 1.2;
    /* padding: 7rpx 10rpx; */
}